# IMDb Local Database Configuration
# Copy this file to .env and customize as needed

# Database credentials (change in production!)
MYSQL_ROOT_PASSWORD=imdb_root_pass
MYSQL_PASSWORD=imdb_pass

# Ports (change if you have conflicts)
MYSQL_PORT=3306
PHPMYADMIN_PORT=8080

# Data refresh settings
MAX_AGE_DAYS=15                # Days before automatic data refresh
REFRESH_CHECK_INTERVAL=86400   # Seconds between refresh checks (24 hours)
